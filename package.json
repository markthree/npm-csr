{
	"version": "0.0.6",
	"name": "npm-csr",
	"description": "description",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"bin": {
		"npm-csr": "bin/index.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/markthree/npm-csr.git"
	},
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist",
		"bin"
	],
	"scripts": {
		"build": "tsup",
		"test": "vitest",
		"dev": "esno src/index.ts",
		"play": "esno demo/index.ts",
		"test:watch": "vitest --watch",
		"coverage": "vitest --coverage",
		"prepublishOnly": "npm run build && node bin/index.js npm",
		"build:watch": "npm run build -- --watch src",
		"release": "bumpp --commit --push --tag && npm publish"
	},
	"keywords": [
		"lib",
		"tool",
		"node",
		"utils"
	],
	"author": {
		"name": "markthree",
		"email": "1801982702@qq.com",
		"url": "https://github.com/markthree"
	},
	"bugs": {
		"email": "1801982702@qq.com",
		"url": "https://github.com/markthree/npm-csr/issues"
	},
	"license": "MIT",
	"devDependencies": {
		"bumpp": "^7.1.1",
		"c8": "^7.11.0",
		"esno": "^0.14.1",
		"tsup": "^5.12.5",
		"typescript": "^4.6.3",
		"vitest": "^0.1.27"
	},
	"dependencies": {
		"@types/node": "^17.0.24",
		"yargs": "^17.4.1"
	}
}
